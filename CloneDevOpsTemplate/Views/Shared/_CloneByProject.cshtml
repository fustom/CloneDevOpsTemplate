@model Tuple<ProjectBase[],string, string>

<h2 class="text-success">@ViewBag.SuccessMessage</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm(Model.Item3, Model.Item2, FormMethod.Post, new { @class = "form-container input-group-lg" }))
{
    <div class="form-group row" style="margin-bottom: 10px">
        @Html.Label("templateProjectId", "Select a source project", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownList("templateProjectId", new SelectList(Model.Item1, "Id", "Name"), "Select a project", new { @class = "form-select form-control" })
        </div>
    </div>
    
    <div class="form-group row" style="margin-bottom: 10px">
        @Html.Label("newProjectName", "Select a target project", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownList("projectId", new SelectList(Model.Item1, "Id", "Name"), "Select a project", new { @class = "form-select form-control" })
        </div>
    </div>
    
    <div class="form-group row">
        <label for="cloneButton" class="col-sm-2 col-form-label" style="visibility: hidden;">Create</label>
        <div class="col-sm-10">
            <button id="cloneButton" type="submit" class="btn btn-primary form-button form-text" style="width: 20%;">Clone</button>
        </div>
    </div>
}
