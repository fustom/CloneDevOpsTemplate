@model Tuple<ProjectBase[], string, string>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm(Model.Item3, Model.Item2, FormMethod.Post, new { @class = "form-container card input-group-lg" }))
{
    @Html.DropDownList("templateProjectId", new SelectList(Model.Item1, "Id", "Name"), "Select a project", new { @class = "form-select form-control" })
    @Html.TextBox("newProjectName", "My New Project", new { @class = "form-text form-control" })
    @Html.TextBox("description", "My New Project Description", new { @class = "form-text form-control" })
    @Html.DropDownList("visibility", new SelectList(Enum.GetNames<Visibility>()), new { @class = "form-select form-control form-text" })
    <button type="submit" class="btn btn-primary form-button form-text">Create</button>
}
