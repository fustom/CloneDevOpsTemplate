@model ProjectBase[]
@{
    ViewData["Title"] = "Projects";
}

<h1>Projects</h1>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Visibility</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@Html.ActionLink(project.Name, "Project", new { projectId = project.Id })</td>
                <td>@project.Description</td>
                <td>@project.Visibility</td>
            </tr>
        }
    </tbody>
</table>